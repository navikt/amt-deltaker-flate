{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["MODE", "BASE_URL", "PROD", "DEV"],
  "tasks": {
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tsconfig.json"]
    },
    "build": {
      "dependsOn": ["^build", "type-check"],
      "outputs": ["build/**"]
    },
    "build:dev": {
      "dependsOn": ["^build", "type-check"],
      "outputs": ["build/**"]
    },
    "build:pull-request": {
      "dependsOn": ["^build", "type-check"],
      "outputs": ["build/**"]
    },
    "build:demo": {
      "dependsOn": ["^build", "type-check"],
      "outputs": ["build/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "test:no-watch": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "lint": {},
    "lint:fix": {},
    "start": {
      "cache": false,
      "persistent": true
    },
    "playwright": {
      "env": ["PLAYWRIGHT_BROWSERS_PATH"],
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
